    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: back Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/back/back.csproj",
        },
        {
            "name": "ng serve",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "pathMapping": {
                "/": "${workspaceFolder}/front"
            },
            "url": "http://localhost:4200/"
        },
        {
            "name": "ng test",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: test",
            "pathMapping": {
                "/": "${workspaceFolder}/front"
            },
            "url": "http://localhost:9876/debug.html"
        }
    ]
}